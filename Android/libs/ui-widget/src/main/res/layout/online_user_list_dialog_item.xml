<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/online_user_list_dialog_item_height"
    android:paddingHorizontal="@dimen/online_user_list_dialog_content_margin_h"
    android:background="@drawable/online_user_list_dialog_item_bg">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/online_user_list_dialog_item_icon_size"
        android:layout_height="@dimen/online_user_list_dialog_item_icon_size"
        android:scaleType="fitXY"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_icon"
        android:layout_marginStart="@dimen/online_user_list_dialog_item_text_margin_h"
        android:layout_centerVertical="true"
        android:textSize="@dimen/online_user_list_dialog_item_text_size"
        android:textColor="@color/online_user_list_dialog_item_text_color"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/online_user_list_dialog_item_status_bg"
        android:paddingHorizontal="@dimen/online_user_list_dialog_item_text_margin_h"
        android:paddingVertical="@dimen/online_user_list_dialog_content_margin_v"
        android:text="@string/online_user_list_dialog_invite"
        android:textColor="@color/online_user_list_dialog_item_status_text_color"
        android:textSize="@dimen/online_user_list_dialog_item_text_size" />

</RelativeLayout>
