<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_bottom_layout_height">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_close"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_alignParentEnd="true"
        android:src="@drawable/live_bottom_btn_close_black"
        android:background="@drawable/live_bottom_button_item_bg_light"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_more"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_toStartOf="@id/live_bottom_btn_close"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:src="@drawable/live_bottom_btn_more_black"
        android:background="@drawable/live_bottom_button_item_bg_light"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_fun1"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_toStartOf="@id/live_bottom_btn_more"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:background="@drawable/live_bottom_button_item_bg_light"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/live_bottom_btn_fun2"
        android:layout_width="@dimen/live_bottom_layout_height"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_toStartOf="@id/live_bottom_btn_fun1"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:background="@drawable/live_bottom_button_item_bg_light"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/live_bottom_message_input_hint"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:layout_width="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/live_bottom_btn_fun2"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:paddingStart="@dimen/live_bottom_edit_padding"
        android:paddingEnd="@dimen/live_bottom_edit_padding"
        android:text="@string/live_bottom_edit_hint"
        android:textSize="@dimen/live_bottom_text_size"
        android:textColor="@color/live_bottom_text_color_light"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        android:lines="1"
        android:background="@drawable/live_bottom_button_input_bg_light"/>
</RelativeLayout>
