<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/live_bottom_layout_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/live_bottom_message_input_hint"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="@dimen/live_bottom_layout_height"
        android:minWidth="100dp"
        android:layout_marginEnd="@dimen/live_bottom_btn_margin"
        android:background="@drawable/live_bottom_button_input_bg"
        android:gravity="center_vertical"
        android:lines="1"
        android:paddingStart="@dimen/live_bottom_edit_padding"
        android:paddingEnd="@dimen/live_bottom_edit_padding"
        android:text="@string/live_bottom_edit_hint"
        android:textAlignment="gravity"
        android:textColor="@color/live_bottom_text_color"
        android:textSize="@dimen/live_bottom_text_size" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/live_bottom_btn_fun1"
                android:layout_width="@dimen/live_bottom_layout_height"
                android:layout_height="@dimen/live_bottom_layout_height"
                android:layout_marginEnd="@dimen/live_bottom_btn_margin"
                android:background="@drawable/live_bottom_button_input_bg" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/live_bottom_btn_fun2"
                android:layout_width="@dimen/live_bottom_layout_height"
                android:layout_height="@dimen/live_bottom_layout_height"
                android:layout_marginEnd="@dimen/live_bottom_btn_margin"
                android:background="@drawable/live_bottom_button_input_bg" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/live_bottom_btn_more"
                android:layout_width="@dimen/live_bottom_layout_height"
                android:layout_height="@dimen/live_bottom_layout_height"
                android:layout_marginEnd="@dimen/live_bottom_btn_margin"
                android:background="@drawable/live_bottom_button_input_bg"
                android:src="@drawable/live_bottom_btn_more" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/live_bottom_btn_fun3"
                android:layout_width="@dimen/live_bottom_layout_height"
                android:layout_height="@dimen/live_bottom_layout_height"
                android:layout_marginEnd="@dimen/live_bottom_btn_margin"
                android:background="@drawable/live_bottom_button_input_bg"
                android:visibility="gone"
                tools:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/live_bottom_btn_fun4"
                android:layout_width="@dimen/live_bottom_layout_height"
                android:layout_height="@dimen/live_bottom_layout_height"
                android:layout_marginEnd="@dimen/live_bottom_btn_margin"
                android:background="@drawable/live_bottom_button_input_bg"
                android:visibility="gone"
                tools:visibility="visible"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/live_bottom_btn_close"
                android:layout_width="@dimen/live_bottom_layout_height"
                android:layout_height="@dimen/live_bottom_layout_height"
                android:background="@drawable/live_bottom_button_input_bg"
                android:src="@drawable/live_bottom_btn_close" />


        </LinearLayout>
    </HorizontalScrollView>


</LinearLayout>
