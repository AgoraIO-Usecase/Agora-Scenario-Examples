<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/title_bar_bg_default_color"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/title_bar_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height">

        <ImageView
            android:id="@+id/title_bar_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@drawable/title_bar_bg_colorful"/>

        <TextView
            android:id="@+id/title_bar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/title_bar_text_color"
            android:maxWidth="@dimen/title_bar_text_max_width"
            android:maxLines="2"
            android:gravity="center"
            android:textSize="@dimen/title_bar_text_size"
            tools:text="TitleTitleTitleTitleTitle"/>

        <ImageView
            android:id="@+id/title_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/title_bar_icon_padding"
            android:src="@drawable/title_bar_back_white"

            tools:visibility="visible"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/title_bar_icon_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/title_bar_user_white"
            android:layout_gravity="center_vertical|end"
            android:padding="@dimen/title_bar_icon_padding"
            tools:visibility="visible"
            android:visibility="gone"/>

    </FrameLayout>

    <View
        android:id="@+id/title_bar_deliver"
        android:layout_width="match_parent"
        android:background="@color/title_bar_deliver_color"
        android:layout_height="0.5dp"/>

</LinearLayout>