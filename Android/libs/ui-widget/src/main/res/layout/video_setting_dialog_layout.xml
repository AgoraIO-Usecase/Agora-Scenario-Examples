<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="bottom"
    android:background="@drawable/video_setting_dialog_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_setting_dialog_text_item_height"
        android:paddingStart="@dimen/video_setting_dialog_margin"
        android:paddingEnd="@dimen/video_setting_dialog_margin">
        <View
            android:id="@+id/video_setting_back"
            android:layout_width="@dimen/video_setting_dialog_arrow_size"
            android:layout_height="@dimen/video_setting_dialog_arrow_size"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/video_setting_back_icon"
            android:visibility="gone"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/video_setting_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_setting_dialog_text_item_height"
            android:textAlignment="gravity"
            android:gravity="center"
            android:text="@string/video_setting_dialog_title"
            android:textSize="@dimen/video_setting_dialog_text_size"
            android:textColor="@color/video_setting_dialog_text_color"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_setting_dialog_item_divider_height"
        android:layout_marginStart="@dimen/video_setting_dialog_margin"
        android:layout_marginEnd="@dimen/video_setting_dialog_margin"
        android:background="@color/video_setting_dialog_diliver_color"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/video_setting_dialog_content_height">

        <FrameLayout
            android:id="@+id/video_setting_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </ScrollView>

</LinearLayout>
