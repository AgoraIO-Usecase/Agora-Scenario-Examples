<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/online_user_list_dialog_height"
    android:orientation="vertical"
    android:background="@drawable/online_user_list_dialog_bg">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/online_user_list_dialog_text_height"
        android:textAlignment="gravity"
        android:gravity="center"
        android:text="@string/online_user_list_dialog_title"
        android:textSize="@dimen/online_user_list_dialog_text_size"
        android:textColor="@color/online_user_list_dialog_text_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/online_user_list_dialog_divider_height"
        android:layout_marginHorizontal="@dimen/online_user_list_dialog_content_margin_h"
        android:background="@color/online_user_list_dialog_divider_color"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/online_user_list_dialog_content_margin_h" />

</LinearLayout>
