            <corners android:radius="10dp"/>
            <solid android:color="@color/gray_alpha"/>
            <stroke android:color="@color/white" android:width="1dp"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/gray_alpha"/>
        </shape>
    </item>



</selector>