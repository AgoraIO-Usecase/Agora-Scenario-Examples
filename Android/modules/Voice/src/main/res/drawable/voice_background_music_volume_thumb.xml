<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape
            android:shape="ring" android:innerRadius="4dp" android:thickness="7dp" android:useLevel="false">
            <solid android:color="#FF0088EB"/>
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape
            android:shape="ring" android:innerRadius="4dp" android:thickness="8dp" android:useLevel="false">
            <solid android:color="#660088EB"/>
            <size android:width="24dp"
                android:height="24dp"/>
        </shape>
    </item>
</selector>