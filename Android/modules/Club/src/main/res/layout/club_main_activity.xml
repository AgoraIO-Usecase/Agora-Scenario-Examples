<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <io.agora.uiwidget.basic.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="21dp"
            android:paddingVertical="15dp"
            android:orientation="vertical">

            <include
                android:id="@+id/list_item_01"
                layout="@layout/club_main_list_item_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>

            <include
                android:id="@+id/list_item_02"
                layout="@layout/club_main_list_item_card"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"/>

            <include
                android:id="@+id/list_item_03"
                layout="@layout/club_main_list_item_2_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"/>

            <include
                android:id="@+id/list_item_04"
                layout="@layout/club_main_list_item_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"/>

        </LinearLayout>


    </ScrollView>


</LinearLayout>