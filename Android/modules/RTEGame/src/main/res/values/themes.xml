<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="game_BaseTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/game_colorPrimary</item>
        <item name="colorPrimaryDark">@color/game_colorPrimaryDark</item>
        <item name="colorAccent">@color/game_colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/game_colorAccent</item>
        <item name="android:colorControlHighlight" tools:targetApi="lollipop">@color/game_colorAccent</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@android:color/transparent</item>

        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>

        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>

    <style name="game_AppTheme" parent="game_BaseTheme">
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorOnBackground">@android:color/black</item>
    </style>

    <style name="game_roundStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="game_cornerTinyStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="game_cornerSmallStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/game_space_small</item>
    </style>

    <style name="game_cornerNormalStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/game_space_normal</item>
    </style>

    <style name="game_cornerBigStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/game_space_big</item>
    </style>

    <style name="game_cornerNormalTopStyle">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeTopLeft">@dimen/game_space_normal</item>
        <item name="cornerSizeTopRight">@dimen/game_space_normal</item>
    </style>

    <style name="game_cornerTinyBottomStyle">
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSizeBottomLeft">4dp</item>
        <item name="cornerSizeBottomRight">4dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

</resources>