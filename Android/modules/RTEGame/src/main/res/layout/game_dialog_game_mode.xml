<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="?attr/colorSurface">

    <TextView
        android:id="@+id/title_dialog_game_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/game_space_normal"
        android:text="@string/game_game_mode"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/game_space_normal"
        android:alpha="0.12"
        android:background="?attr/colorOnSurface"
        app:layout_constraintTop_toBottomOf="@id/title_dialog_game_mode" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pk_fg_game_mode"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="@dimen/game_space_big"
        app:backgroundTint="#F5A623"
        app:icon="@drawable/game_ic_game_mode_pk"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_dialog_game_mode"
        app:shapeAppearance="@style/game_cornerBigStyle" />

    <TextView
        android:id="@+id/title_pk_game_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/game_space_small"
        android:layout_marginBottom="@dimen/game_space_big"
        android:text="@string/game_pk_with_mic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/btn_pk_fg_game_mode"
        app:layout_constraintStart_toStartOf="@id/btn_pk_fg_game_mode"
        app:layout_constraintTop_toBottomOf="@id/btn_pk_fg_game_mode" />

</androidx.constraintlayout.widget.ConstraintLayout>