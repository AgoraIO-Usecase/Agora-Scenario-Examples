<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_fg_room"
        android:background="?android:attr/windowBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout_fg_room"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clipToPadding="false"
            app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget"
            android:layout_marginHorizontal="48dp"
            app:tabIndicatorColor="@color/room_colorAccent" />

    </com.google.android.material.appbar.AppBarLayout>

    <io.agora.uiwidget.DynamicView
        android:id="@+id/dynamic_view_fg_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:dynamic_gapInFlex="@dimen/room_space_normal"
        app:dynamic_layoutStyle="flex"
        app:dynamic_previewViewCount="3" />

    <View
        android:id="@+id/scrim_fg_room"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:translationZ="4dp"
        android:background="?attr/scrimBackground"
        android:visibility="invisible"
        app:layout_behavior="@string/fab_transformation_scrim_behavior" />

    <CheckBox
        android:id="@+id/checkbox_mic_fg_room"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/room_space_normal"
        android:button="@drawable/room_selector_ic_mic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_fg_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:layout_marginEnd="@dimen/room_space_small"
        android:contentDescription="@string/room_fab_add_sub_room"
        android:src="@drawable/room_ic_add"
        app:backgroundTint="@color/room_colorPrimary"
        app:ensureMinTouchTargetSize="true"
        app:fabCustomSize="24dp"
        app:fabSize="mini"
        app:tint="?android:attr/windowBackground" />

    <include
        android:id="@+id/view_input_fg_room"
        layout="@layout/room_view_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/room_space_medium"
        android:visibility="invisible"
        app:layout_behavior="@string/fab_transformation_sheet_behavior" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>