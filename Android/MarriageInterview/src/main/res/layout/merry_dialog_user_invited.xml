<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/merry_shape_create_dialog_background"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/room_dialog_invite"
            android:textColor="@color/create_dialog_title"
            android:textSize="@dimen/main_title_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="@string/room_dialog_invited"
            android:textColor="@color/create_dialog_title"
            android:textSize="@dimen/confirm_dialog_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        <Button
            android:id="@+id/btRefuse"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:background="@drawable/merry_shape_confirm_dialog_cancel_background"
            android:text="@string/room_dialog_hand_up_refuse"
            android:textAllCaps="false"
            android:textColor="@color/confirm_dialog_cancel_text"
            android:textSize="@dimen/confirm_dialog_message"
            app:layout_constraintEnd_toStartOf="@+id/btAgree"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

        <Button
            android:id="@+id/btAgree"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:background="@drawable/merry_shape_confirm_dialog_ok_background"
            android:text="@string/room_dialog_hand_up_agree"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/confirm_dialog_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btRefuse"
            app:layout_constraintTop_toBottomOf="@+id/tvMessage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
