<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/default_head"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@android:color/black"
            android:textSize="@dimen/member_list_name"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btRefuse"
            app:layout_constraintStart_toEndOf="@+id/ivHead"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btRefuse"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/shape_request_connect_list_item_reject"
            android:text="@string/room_dialog_hand_up_refuse"
            android:textAllCaps="false"
            android:textColor="@color/confirm_dialog_cancel_text"
            android:textSize="@dimen/member_list_invite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btAgree"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btAgree"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/shape_member_list_dialog_invite"
            android:text="@string/room_dialog_hand_up_agree"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/member_list_invite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

