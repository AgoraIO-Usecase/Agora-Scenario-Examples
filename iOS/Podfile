# Uncomment the next line to define a global platform for your project
platform :ios, '11.0'

def commonPods
  use_frameworks!
  pod 'RxSwift', '6.1.0'
  pod 'RxCocoa', '6.1.0'
  pod 'RxRelay', '6.1.0'
  pod 'IGListKit', '~> 4.0.0'
end

# target with leancloud sdk
target 'Scene-Examples_LeanCloud' do
  commonPods
  use_frameworks!
end

target 'Core_LeanCloud' do
  use_frameworks!
  pod 'LeanCloud'
  pod 'RxSwift', '6.1.0'
  pod 'RxCocoa', '6.1.0'
  pod 'RxRelay', '6.1.0'
end

target 'InteractivePodcast_LeanCloud' do
  commonPods
  use_frameworks!
  pod 'LeanCloud'
  pod 'AgoraRtcEngine_iOS'
end

target 'BlindDate_LeanCloud' do
  commonPods
  use_frameworks!
  pod 'LeanCloud'
  pod 'AgoraRtm_iOS'
  pod 'AgoraRtcEngine_iOS'
end

# target with firebase sdk
target 'Scene-Examples_Firebase' do
  commonPods
  use_frameworks!
end

target 'Core_Firebase' do
  use_frameworks!
  pod 'Firebase/Firestore'
  pod 'FirebaseFirestoreSwift'
  pod 'RxSwift', '6.1.0'
  pod 'RxCocoa', '6.1.0'
  pod 'RxRelay', '6.1.0'
end

target 'InteractivePodcast_Firebase' do
  commonPods
  use_frameworks!
  pod 'Firebase/Firestore'
  pod 'FirebaseFirestoreSwift'
  pod 'AgoraRtcEngine_iOS'
end

target 'BlindDate_Firebase' do
  commonPods
  use_frameworks!
  pod 'Firebase/Firestore'
  pod 'FirebaseFirestoreSwift'
  pod 'AgoraRtm_iOS'
  pod 'AgoraRtcEngine_iOS'
end
